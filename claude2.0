  <script>
    // Gallery setup
    function setupGallery(galleryId, thumbsId) {
      const gallery = document.getElementById(galleryId);
      const thumbsContainer = document.getElementById(thumbsId);
      const images = gallery.querySelectorAll('.gallery-main');

      images.forEach((img, i) => {
        const thumb = document.createElement('img');
        thumb.src = img.src;
        thumb.className = 'gallery-thumb' + (i === 0 ? ' active' : '');
        thumb.addEventListener('click', () => {
          images.forEach(im => im.classList.remove('active'));
          thumbsContainer.querySelectorAll('.gallery-thumb').forEach(t => t.classList.remove('active'));
          img.classList.add('active');
          thumb.classList.add('active');
        });
        thumbsContainer.appendChild(thumb);
      });

      // Auto-advance
      let current = 0;
      setInterval(() => {
        images[current].classList.remove('active');
        thumbsContainer.querySelectorAll('.gallery-thumb')[current].classList.remove('active');
        current = (current + 1) % images.length;
        images[current].classList.add('active');
        thumbsContainer.querySelectorAll('.gallery-thumb')[current].classList.add('active');
      }, 4000);
    }

    setupGallery('hancock-gallery', 'hancock-thumbs');
    setupGallery('iverson-gallery', 'iverson-thumbs');

    // Scroll fade-in
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) e.target.classList.add('visible');
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.fade-in').forEach(el => observer.observe(el));
  </script>
