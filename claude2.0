<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>IRL Hospitality ‚Äî Nashville Rentals</title>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet" />
  <style>
    *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

    :root {
      --cream: #f5f0e8;
      --charcoal: #1c1c1a;
      --warm-brown: #5c4033;
      --sage: #7a8c6e;
      --gold: #c9a84c;
      --rust: #b85c38;
    }

    html { scroll-behavior: smooth; }

    body {
      font-family: 'DM Sans', sans-serif;
      background: var(--cream);
      color: var(--charcoal);
      overflow-x: hidden;
    }

    /* NAV */
    nav {
      position: fixed;
      top: 0; left: 0; right: 0;
      z-index: 100;
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1.25rem 3rem;
      background: rgba(245, 240, 232, 0.92);
      backdrop-filter: blur(10px);
      border-bottom: 1px solid rgba(92, 64, 51, 0.1);
    }

    .nav-logo {
      font-family: 'Playfair Display', serif;
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--charcoal);
      letter-spacing: 0.02em;
    }

    .nav-logo span {
      color: var(--rust);
    }

    nav a {
      font-size: 0.85rem;
      font-weight: 500;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      color: var(--charcoal);
      text-decoration: none;
      opacity: 0.7;
      transition: opacity 0.2s;
    }
    nav a:hover { opacity: 1; }
    nav .nav-links { display: flex; gap: 2rem; align-items: center; }
    nav .nav-book {
      background: var(--charcoal);
      color: var(--cream) !important;
      opacity: 1 !important;
      padding: 0.6rem 1.4rem;
      border-radius: 2px;
      transition: background 0.2s !important;
    }
    nav .nav-book:hover { background: var(--rust) !important; }

    /* HERO */
    .hero {
      height: 100vh;
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      overflow: hidden;
    }

    .hero-bg {
      position: absolute;
      inset: 0;
      display: grid;
      grid-template-columns: 1fr 1fr;
    }

    .hero-bg-panel {
      height: 100%;
      background-size: cover;
      background-position: center;
      filter: brightness(0.55);
      transition: filter 0.4s;
    }

    .hero-bg-panel:first-child {
      background-image: url('327_Hancock_St1.jpg');
    }

    .hero-bg-panel:last-child {
      background-image: url('1039_Iverson_Ave1.jpg');
    }

    .hero-divider {
      position: absolute;
      top: 0; bottom: 0;
      left: 50%;
      width: 1px;
      background: rgba(245, 240, 232, 0.4);
      z-index: 2;
    }

    .hero-content {
      position: relative;
      z-index: 3;
      color: var(--cream);
    }

    .hero-eyebrow {
      font-size: 0.75rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      opacity: 0.75;
      margin-bottom: 1rem;
      animation: fadeUp 0.8s ease both;
    }

    .hero-title {
      font-family: 'Playfair Display', serif;
      font-size: clamp(3rem, 7vw, 6rem);
      line-height: 1.05;
      margin-bottom: 0.5rem;
      animation: fadeUp 0.8s 0.15s ease both;
    }

    .hero-title em {
      font-style: italic;
      color: var(--gold);
    }

    .hero-sub {
      font-size: 1rem;
      font-weight: 300;
      opacity: 0.8;
      margin-bottom: 2.5rem;
      animation: fadeUp 0.8s 0.3s ease both;
    }

    .hero-ctas {
      display: flex;
      gap: 1rem;
      justify-content: center;
      animation: fadeUp 0.8s 0.45s ease both;
    }

    .btn {
      display: inline-block;
      padding: 0.85rem 2rem;
      font-family: 'DM Sans', sans-serif;
      font-size: 0.85rem;
      font-weight: 500;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      text-decoration: none;
      border-radius: 2px;
      transition: all 0.25s;
      cursor: pointer;
    }

    .btn-primary {
      background: var(--cream);
      color: var(--charcoal);
    }
    .btn-primary:hover {
      background: var(--gold);
      color: var(--charcoal);
    }

    .btn-outline {
      border: 1px solid rgba(245,240,232,0.6);
      color: var(--cream);
    }
    .btn-outline:hover {
      border-color: var(--cream);
      background: rgba(245,240,232,0.1);
    }

    .scroll-hint {
      position: absolute;
      bottom: 2.5rem;
      left: 50%;
      transform: translateX(-50%);
      z-index: 3;
      color: var(--cream);
      opacity: 0.5;
      font-size: 0.7rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5rem;
      animation: fadeUp 1s 1s ease both;
    }

    .scroll-hint::after {
      content: '';
      width: 1px;
      height: 40px;
      background: var(--cream);
      animation: scrollLine 1.5s ease infinite;
    }

    /* INTRO */
    .intro {
      padding: 8rem 3rem;
      max-width: 720px;
      margin: 0 auto;
      text-align: center;
    }

    .intro h2 {
      font-family: 'Playfair Display', serif;
      font-size: clamp(1.8rem, 3vw, 2.8rem);
      line-height: 1.3;
      margin-bottom: 1.5rem;
    }

    .intro h2 em {
      font-style: italic;
      color: var(--rust);
    }

    .intro p {
      font-size: 1.05rem;
      font-weight: 300;
      line-height: 1.8;
      color: rgba(28,28,26,0.75);
    }

    /* PROPERTIES */
    .properties {
      padding: 2rem 0 8rem;
    }

    .section-label {
      text-align: center;
      font-size: 0.7rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      color: var(--rust);
      margin-bottom: 4rem;
    }

    .property-card {
      display: grid;
      grid-template-columns: 1fr 1fr;
      min-height: 90vh;
      margin-bottom: 6rem;
    }

    .property-card.reverse {
      direction: rtl;
    }
    .property-card.reverse > * {
      direction: ltr;
    }

    .property-gallery {
      position: relative;
      overflow: hidden;
      background: var(--charcoal);
    }

    .gallery-main {
      width: 100%;
      height: 100%;
      object-fit: cover;
      opacity: 0;
      transition: opacity 0.6s;
      position: absolute;
      inset: 0;
    }

    .gallery-main.active {
      opacity: 1;
    }

    .gallery-thumbs {
      position: absolute;
      bottom: 1.5rem;
      left: 1.5rem;
      right: 1.5rem;
      display: flex;
      gap: 0.5rem;
      z-index: 2;
      overflow-x: auto;
      scrollbar-width: none;
    }

    .gallery-thumbs::-webkit-scrollbar { display: none; }

    .gallery-thumb {
      width: 60px;
      height: 45px;
      flex-shrink: 0;
      object-fit: cover;
      cursor: pointer;
      opacity: 0.5;
      transition: opacity 0.2s;
      border: 1px solid transparent;
    }

    .gallery-thumb.active, .gallery-thumb:hover {
      opacity: 1;
      border-color: var(--gold);
    }

    .property-info {
      background: white;
      padding: 5rem 4rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
    }

    .property-tag {
      font-size: 0.7rem;
      letter-spacing: 0.2em;
      text-transform: uppercase;
      color: var(--sage);
      margin-bottom: 1rem;
    }

    .property-name {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2rem, 3.5vw, 3rem);
      line-height: 1.15;
      margin-bottom: 0.75rem;
    }

    .property-address {
      font-size: 0.85rem;
      color: rgba(28,28,26,0.5);
      margin-bottom: 2rem;
    }

    .property-desc {
      font-size: 1rem;
      font-weight: 300;
      line-height: 1.85;
      color: rgba(28,28,26,0.75);
      margin-bottom: 2.5rem;
    }

    .property-specs {
      display: flex;
      gap: 2rem;
      margin-bottom: 2.5rem;
      padding-bottom: 2.5rem;
      border-bottom: 1px solid rgba(28,28,26,0.1);
    }

    .spec {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .spec-num {
      font-family: 'Playfair Display', serif;
      font-size: 2rem;
      font-weight: 700;
      color: var(--charcoal);
    }

    .spec-label {
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.1em;
      color: rgba(28,28,26,0.5);
    }

    .amenities {
      margin-bottom: 3rem;
    }

    .amenities h4 {
      font-size: 0.7rem;
      letter-spacing: 0.15em;
      text-transform: uppercase;
      color: var(--charcoal);
      margin-bottom: 1rem;
    }

    .amenity-list {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .amenity-pill {
      font-size: 0.78rem;
      padding: 0.35rem 0.85rem;
      background: var(--cream);
      color: var(--charcoal);
      border-radius: 2rem;
    }

    .property-cta {
      background: var(--charcoal);
      color: var(--cream);
      font-size: 0.85rem;
      font-weight: 500;
      letter-spacing: 0.08em;
      text-transform: uppercase;
      padding: 1rem 2rem;
      text-decoration: none;
      display: inline-block;
      border-radius: 2px;
      transition: background 0.25s;
      align-self: flex-start;
    }

    .property-cta:hover {
      background: var(--rust);
    }

    /* NEIGHBORHOOD */
    .neighborhood {
      background: var(--charcoal);
      color: var(--cream);
      padding: 8rem 3rem;
    }

    .neighborhood-inner {
      max-width: 1100px;
      margin: 0 auto;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 6rem;
      align-items: center;
    }

    .neighborhood h2 {
      font-family: 'Playfair Display', serif;
      font-size: clamp(2rem, 3.5vw, 3rem);
      line-height: 1.2;
      margin-bottom: 1.5rem;
    }

    .neighborhood h2 em {
      font-style: italic;
      color: var(--gold);
    }

    .neighborhood p {
      font-weight: 300;
      line-height: 1.85;
      opacity: 0.8;
      margin-bottom: 1.5rem;
    }

    .neighborhood-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .neighborhood-img {
      width: 100%;
      aspect-ratio: 4/3;
      object-fit: cover;
      opacity: 0.85;
    }

    .neighborhood-img:first-child {
      grid-column: 1 / -1;
      aspect-ratio: 16/9;
    }

    /* FOOTER */
    footer {
      background: var(--cream);
      border-top: 1px solid rgba(28,28,26,0.1);
      padding: 3rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .footer-logo {
      font-family: 'Playfair Display', serif;
      font-size: 1.2rem;
      font-weight: 700;
    }

    .footer-logo span { color: var(--rust); }

    .footer-tagline {
      font-size: 0.8rem;
      opacity: 0.5;
      margin-top: 0.25rem;
    }

    .footer-links {
      display: flex;
      gap: 2rem;
    }

    .footer-links a {
      font-size: 0.8rem;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      text-decoration: none;
      color: var(--charcoal);
      opacity: 0.5;
      transition: opacity 0.2s;
    }

    .footer-links a:hover { opacity: 1; }

    /* ANIMATIONS */
    @keyframes fadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    @keyframes scrollLine {
      0% { transform: scaleY(0); transform-origin: top; }
      50% { transform: scaleY(1); transform-origin: top; }
      51% { transform: scaleY(1); transform-origin: bottom; }
      100% { transform: scaleY(0); transform-origin: bottom; }
    }

    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.7s ease, transform 0.7s ease;
    }
    .fade-in.visible {
      opacity: 1;
      transform: none;
    }

    @media (max-width: 900px) {
      nav { padding: 1rem 1.5rem; }
      .nav-links { display: none; }
      .hero-title { font-size: 2.8rem; }
      .property-card { grid-template-columns: 1fr; min-height: auto; }
      .property-card.reverse { direction: ltr; }
      .property-gallery { height: 55vw; min-height: 300px; }
      .property-info { padding: 3rem 2rem; }
      .neighborhood-inner { grid-template-columns: 1fr; gap: 3rem; }
      footer { flex-direction: column; gap: 2rem; text-align: center; }
    }
  </style>
</head>
